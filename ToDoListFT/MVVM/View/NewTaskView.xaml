<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoListFT.MVVM.View.NewTaskView"
             Title="Add Task">

    <Grid RowDefinitions=".2*, .2*, .5*, .1*">
        <Entry Placeholder="Task Title"
               Style="{StaticResource Task}"
               Text="{Binding Title}"
               HorizontalTextAlignment="Center"
               PlaceholderColor="CadetBlue"
               VerticalOptions="Center"
               Grid.Row="0"/>
        <Entry Placeholder="Task Description"
               Style="{StaticResource Task}"
               Text="{Binding Description}"
               HorizontalTextAlignment="Center"
               PlaceholderColor="CadetBlue"
               VerticalOptions="Center"
               Grid.Row="1"/>
        <HorizontalStackLayout
            Grid.Row="3"
            Margin="10"
            HorizontalOptions="CenterAndExpand"
            Spacing="15"
            VerticalOptions="Center">
            <Button
                Text="Add task"
                Clicked="AddTaskClicked"
                BackgroundColor="LightGray"
                TextColor="Black"/>
        </HorizontalStackLayout>
    </Grid>

</ContentPage>

